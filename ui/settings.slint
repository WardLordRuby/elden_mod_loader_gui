import { GroupBox, Button, HorizontalBox, LineEdit } from "std-widgets.slint";

import { Page } from "page.slint";

export global SettingsLogic  {
    callback select_game_dir();
    in property <string> game_path;
}

export component SettingsPage inherits Page {
    title: @tr("Settings");
    description: @tr("Set path to eldenring.exe and register mods here");

    VerticalLayout {
        padding-left: 5px;
        padding-right: 5px;
        padding-bottom: 3px;
        spacing: 0px;
        preferred-width: 460px;
        
        GroupBox {
            height: 95px;
            title: @tr("Game Path");

            HorizontalBox {
                padding: 0px;

                Text {
                    vertical-alignment: center;
                    horizontal-alignment: left;
                    wrap: word-wrap;
                    text: SettingsLogic.game_path;
                }
    
                select-game := Button {
                    width: 105px;
                    height: 35px;
                    text: @tr("Set Path");
                    clicked => {
                        SettingsLogic.select_game_dir();
                    }
                }
            }
        }
    

    }
}